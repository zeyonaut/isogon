let! add : nat -> nat -> nat
	= |a| |b| a :: |_| nat {
		| 0        -> b
		| suc @_.k -> suc k
	};

let! mul : nat -> nat -> nat
	= |a| |b| a :: |_| nat {
		| 0        -> 0
		| suc @_.k -> add b k
	};

let! pow : nat -> nat -> nat
	= |a| |b| a :: |_| nat {
		| 0        -> 1
		| suc @_.k -> mul b k
	};

pow 3 7
